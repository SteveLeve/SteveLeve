---
const services = [
  {
    icon: 'monitoring',
    title: 'Reliability & Incident Response',
    description: 'SLO/SLI design, alert hygiene, on-call playbooks, Datadog/CloudWatch/OpsGenie, MTTR reduction.',
    href: '/services#reliability'
  },
  {
    icon: 'cloud_upload',
    title: 'Modernization & Cloud',
    description: 'AWS migration, cost optimization, platform consolidation, DevSecOps & GitOps adoption.',
    href: '/services#modernization'
  },
  {
    icon: 'psychology',
    title: 'Trusted Advisor',
    description: 'Hybrid leadership: hands-on support with strategic roadmaps for founders and CTOs under pressure.',
    href: '/services#advisor'
  },
  {
    icon: 'smart_toy',
    title: 'AI Readiness',
    description: 'Practical, secure adoption: coding assistance, analytics, and governance aligned to your risk profile.',
    href: '/services#ai'
  }
];
---

<section class="pillars">
  {services.map(service => (
    <article class="card surface">
      <div class="card__header">
        <span class="material-symbols-outlined card__icon">{service.icon}</span>
        <h3>{service.title}</h3>
      </div>
      <p class="card__description">{service.description}</p>
      <a href={service.href} class="card__link">Learn more</a>
    </article>
  ))}
</section>

<style>
  .pillars {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 3rem 0;
  }

  .card {
    background: var(--surface);
    border-radius: var(--radius);
    padding: 1.5rem;
    box-shadow: var(--shadow);
    transition: all 0.3s ease;
    border: 1px solid var(--border);
  }

  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, .1), 0 4px 12px rgba(0, 0, 0, .1);
  }

  .card__header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .card__icon {
    font-size: 1.75rem;
    color: var(--brand);
    background: rgba(103, 80, 164, 0.1);
    padding: 0.5rem;
    border-radius: 8px;
  }

  .card h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--ink);
    line-height: 1.3;
  }

  .card__description {
    color: var(--muted);
    line-height: 1.6;
    margin-bottom: 1.25rem;
    font-size: 0.95rem;
  }

  .card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--brand);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .card__link:hover {
    color: var(--brand-ink);
    text-decoration: underline;
  }

  .card__link::after {
    content: 'â†’';
    transition: transform 0.2s ease;
  }

  .card__link:hover::after {
    transform: translateX(2px);
  }

  /* Dark theme adjustments */
  :global([data-theme="dark"]) .card__icon {
    background: rgba(208, 188, 255, 0.15);
  }

  :global([data-theme="dark"]) .card:hover {
    box-shadow: 0 20px 40px rgba(0, 0, 0, .3), 0 4px 12px rgba(0, 0, 0, .2);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .pillars {
      grid-template-columns: 1fr;
      gap: 1rem;
      margin: 2rem 0;
    }

    .card {
      padding: 1.25rem;
    }

    .card__header {
      gap: 0.5rem;
    }

    .card__icon {
      font-size: 1.5rem;
      padding: 0.4rem;
    }

    .card h3 {
      font-size: 1.1rem;
    }
  }
</style>