---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.tsx';

const contactMethods = [
  {
    icon: 'email',
    title: 'Email Response',
    description: 'I respond to all inquiries within 24 hours',
    detail: 'Use the form for detailed project discussions'
  },
  {
    icon: 'schedule',
    title: 'Quick Turnaround',
    description: 'Most consultations can start within a week',
    detail: 'Fixed-fee assessments provide fastest clarity'
  },
  {
    icon: 'handshake',
    title: 'No Pressure Approach',
    description: 'Honest assessment of fit and timeline',
    detail: 'I\'ll tell you if I\'m not the right person for the job'
  }
];
---

<Layout 
  title="Contact â€” Steve Leve" 
  currentPage="contact"
  description="Contact Steve Leve to discuss reliability, modernization, and pragmatic tech strategy."
>
  <div class="container">
    <header class="hero surface">
      <h1 class="hero-title">
        <span class="material-symbols-outlined">contact_mail</span> 
        Let's talk
      </h1>
      <p class="hero-content">
        Ready to reduce risk and move faster? Let's start with a conversation about your goals and timeline.
      </p>
    </header>

    <div class="contact-layout">
      <!-- Contact Form Section -->
      <section class="form-section surface">
        <h2 class="section-title">Send a Message</h2>
        <p class="section-description">
          Tell me about your project, challenges, and timeline. I'll respond with next steps or questions.
        </p>
        <ContactForm client:load />
      </section>

      <!-- Contact Information Section -->
      <aside class="info-section">
        <div class="contact-methods">
          {contactMethods.map(method => (
            <div class="contact-method surface">
              <span class="method-icon material-symbols-outlined">{method.icon}</span>
              <div class="method-content">
                <h3 class="method-title">{method.title}</h3>
                <p class="method-description">{method.description}</p>
                <p class="method-detail">{method.detail}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="alternative-contact surface">
          <h3>Prefer LinkedIn?</h3>
          <p>Connect with me for quick questions or to start a conversation.</p>
          <a 
            href="https://www.linkedin.com/in/steve-leve" 
            target="_blank" 
            rel="noopener noreferrer"
            class="linkedin-link"
          >
            <span class="material-symbols-outlined">work</span>
            Message on LinkedIn
          </a>
        </div>

        <div class="services-reminder surface">
          <h3>Not sure where to start?</h3>
          <p>A fixed-fee assessment often provides the fastest path to clarity and actionable next steps.</p>
          <a href="/services" class="services-link">
            View assessment options
          </a>
        </div>
      </aside>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1120px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero {
    text-align: center;
    padding: 3rem 2rem;
    margin: 2rem 0;
    border-radius: var(--radius);
    background: var(--surface);
    box-shadow: var(--shadow);
    border: 1px solid var(--border);
  }

  .hero-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--ink);
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .hero-title .material-symbols-outlined {
    font-size: 2.25rem;
    color: var(--brand);
  }

  .hero-content {
    font-size: 1.1rem;
    color: var(--muted);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-layout {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    margin: 3rem 0;
  }

  .form-section {
    background: var(--surface);
    border-radius: var(--radius);
    padding: 2rem;
    box-shadow: var(--shadow);
    border: 1px solid var(--border);
  }

  .section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--ink);
    margin: 0 0 0.5rem 0;
  }

  .section-description {
    color: var(--muted);
    margin-bottom: 2rem;
    line-height: 1.5;
  }

  .info-section {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-method {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.25rem;
    background: var(--surface);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    border: 1px solid var(--border);
  }

  .method-icon {
    font-size: 1.5rem;
    color: var(--brand);
    background: rgba(103, 80, 164, 0.1);
    padding: 0.5rem;
    border-radius: 8px;
    flex-shrink: 0;
  }

  .method-content {
    flex: 1;
  }

  .method-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--ink);
    margin: 0 0 0.25rem 0;
  }

  .method-description {
    font-size: 0.9rem;
    color: var(--muted);
    margin: 0 0 0.25rem 0;
  }

  .method-detail {
    font-size: 0.8rem;
    color: var(--muted);
    margin: 0;
    font-style: italic;
  }

  .alternative-contact,
  .services-reminder {
    padding: 1.5rem;
    background: var(--surface);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    border: 1px solid var(--border);
  }

  .alternative-contact h3,
  .services-reminder h3 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--ink);
    margin: 0 0 0.5rem 0;
  }

  .alternative-contact p,
  .services-reminder p {
    color: var(--muted);
    margin: 0 0 1rem 0;
    font-size: 0.9rem;
    line-height: 1.4;
  }

  .linkedin-link,
  .services-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--brand);
    color: white;
    text-decoration: none;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .linkedin-link:hover,
  .services-link:hover {
    background: var(--brand-ink);
    transform: translateY(-1px);
  }

  .services-link {
    background: transparent;
    color: var(--brand);
    border: 1px solid var(--brand);
  }

  .services-link:hover {
    background: var(--brand);
    color: white;
  }

  /* Dark theme adjustments */
  :global([data-theme="dark"]) .method-icon {
    background: rgba(208, 188, 255, 0.15);
  }

  /* Mobile responsive */
  @media (max-width: 968px) {
    .contact-layout {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .form-section {
      order: 1;
    }

    .info-section {
      order: 2;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 2.5rem 1.5rem;
      margin: 1rem 0;
    }

    .hero-title {
      font-size: 1.75rem;
      flex-direction: column;
      gap: 0.5rem;
    }

    .hero-title .material-symbols-outlined {
      font-size: 1.75rem;
    }

    .form-section {
      padding: 1.5rem;
    }

    .contact-method {
      padding: 1rem;
    }

    .alternative-contact,
    .services-reminder {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .hero {
      padding: 2rem 1rem;
    }

    .hero-title {
      font-size: 1.5rem;
    }

    .form-section {
      padding: 1.25rem;
    }

    .contact-method {
      flex-direction: column;
      text-align: center;
      gap: 0.75rem;
    }

    .method-icon {
      align-self: center;
    }
  }
</style>